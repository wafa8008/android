<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMI">

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="166dp"
        android:layout_height="76dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="99dp"
        android:hint="Result"
        app:layout_constraintBottom_toTopOf="@+id/hight"
        app:layout_constraintEnd_toStartOf="@+id/btnclear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="41dp"
        android:text="Clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtresult"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hight"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:hint="Enter hight"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/wight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtresult" />

    <EditText
        android:id="@+id/wight"
        android:layout_width="159dp"
        android:layout_height="63dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Enter weight"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnclear" />

    <Button
        android:id="@+id/cal"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="100dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wight" />
</androidx.constraintlayout.widget.ConstraintLayout>