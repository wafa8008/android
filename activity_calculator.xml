<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">


    <EditText
        android:id="@+id/num1"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/num2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="119dp"
        android:layout_height="46dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textresult"
        android:layout_width="230dp"
        android:layout_height="66dp"
        android:layout_marginTop="76dp"
        android:hint="Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="99dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="321dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/subbtn"
        android:layout_width="104dp"
        android:layout_height="46dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="312dp"
        android:text="Sub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addbtn" />

    <Button
        android:id="@+id/mulbtn"
        android:layout_width="99dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="197dp"
        android:text="Mul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintVertical_bias="0.994" />

    <Button
        android:id="@+id/divbtn"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="198dp"
        android:text="Div"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mulbtn"
        app:layout_constraintTop_toBottomOf="@+id/num2"
        app:layout_constraintVertical_bias="0.977" />

    <Button
        android:id="@+id/clearbtn"
        android:layout_width="106dp"
        android:layout_height="56dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="63dp"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/divbtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mulbtn"
        app:layout_constraintTop_toBottomOf="@+id/num2"
        app:layout_constraintVertical_bias="0.898" />
</androidx.constraintlayout.widget.ConstraintLayout>