<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".webhtml">

    <ImageView
        android:id="@+id/anather_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/mysktxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anather_img"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="txt sk"
        android:textSize="20dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mysktxt"
        android:id="@+id/b1"
        android:onClick="btn_app_data"
        android:text="APPLY NOW"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/b1"
        android:id="@+id/b2"
        android:onClick="btn_add_data"
        android:text="favoret"/>

</RelativeLayout>